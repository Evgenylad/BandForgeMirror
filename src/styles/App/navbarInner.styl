@import '../../styles/colors'
@media(min-width: 768px)
 .navbarInner
  position: relative;
  display: block;
  width: 100%;

  &__toolbar
   display: flex;
   justify-content: space-between;
   padding: 0;
   padding-right: 64px;
   height: 64px !important;

  &__activeBand
   box-sizing: border-box;
   width: (256/1920)*100%;
   height: 100%;
   min-width: 256px;
   height: 64px;
   padding-left: 22px;
   padding-top: 10px;
   padding-bottom: 16px;
   background: green-background;
   box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

  &__userTitle
   position: relative;
   display: flex;
   align-items: center;
   height: 22px;

  &__userName
   margin: 0;
   font-family: Roboto-Regular;
   font-size: 20px;
   color: #060D14;
   letter-spacing: 0px;

  &__userStatus
   font-family: Roboto-Light;
   font-size: 9px;
   color: #060D14;
   letter-spacing: 0px;

  &__title
   align-self: center;
   width: 40px;
   height: 64px;
   margin: 0;
   padding: 0;
   color: #ffffff;
   font-size: 10px !important;
   font-family: Roboto-Regular;
   letter-spacing: 0px;
   text-transform: uppercase;

  &__userBlock
   display: flex;
   justify-content: space-between;
   width: 150px;

  &__btn
   &--tick
    position: absolute;
    right: 0;
    bottom: -8px;
    color: #000000;
   &--comment
    width: 72px;

  &__userMenu
   width: 72px;
   &:after
    content: '\2807';
    position: absolute;
    right: 26px;
    top: 50%;
    font-size: 26px;
    color: #ffffff;
    transform: translateY(-50%);
    cursor: pointer;

  &__list
   display: block;
   position: absolute;
   left: 0;
   top: 64px;
   width: 256px;
   min-height: 57px;
   margin: 0;
   padding: 0;
   list-style: none;
   background-color: tile-background;
   z-index: 10;
   border-bottom-right-radius: 4px;
   border-bottom-left-radius: 4px;
   box-shadow: 0px 4px 5px 0px rgba(0,0,0,0.20);

  &__userList
   display: block;
   position: absolute;
   right: 0;
   top: 64px;
   width: 256px;
   min-height: 57px;
   margin: 0;
   padding: 0;
   list-style: none;
   background-color: tile-background;
   z-index: 10;
   border-bottom-right-radius: 4px;
   border-bottom-left-radius: 4px;
   box-shadow: 0px 4px 5px 0px rgba(0,0,0,0.20);

  &__listItem
   width: 100%;
   height: 57px;
   padding-left: 22px;
   line-height: 57px;
   color: #ffffff;
   &:hover
    background-color: #4c5054;

  &__link
   font-family: Roboto-Regular;
   font-size: 15px;
   color: #CCCCCC;
   letter-spacing: 0px;
   text-decoration: none !important;
   cursor: pointer;

.moveDown-enter-active, .moveDown-leave-active {
  transition: opacity 1.5s
}
.moveDown-enter, .moveDown-leave-active {
  opacity: 0
}
