@import '../../styles/colors'
.dashboard
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 90%;
 overflow: scroll;
 padding: 30px calc(34/1920*100%) 0;
 &__container
  display: flex;

 &__column
  width: 432px;
  margin-right: calc(147/1920*100%);

 &__title
  width: 100%;
  margin: 0;
  margin-bottom: 10px;
  padding: 0;
  font-size: 24px;
  color: green-background;
  letter-spacing: 0px;
  font-weight: normal;

 &__noinfo
  display: block;
  margin-top: 15px;
  margin-bottom: 470px;
  font-size: 14px;
  color: #A6A6A6;
  letter-spacing: -0.03px;
  font-weight: lighter;

 &__noinfoLink
  color: green-background;
  cursor: pointer;

 &__details
  width: 100%;
  min-height: 124px;
  margin-bottom: 20px;
  background: tile-background;
  box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.13);
  border-radius: 3px;
  &--shows
   padding: 18px 18px 18px 25px;
  &--tours
   min-height: 144px;

 &__name
  margin: 0;
  margin-bottom: 20px;
  font-weight: 400;
  font-size: 20px;
  color: #ECF0F1;
  letter-spacing: -0.13px;
  &--tours
   padding-left: 15px;
   padding-top: 18px;
   margin-bottom: 18px;

 &__time
  font-weight: 300;
  font-size: 20px;
  color: rgba(236,240,240,0.87);
  letter-spacing: -0.13px;

 &__dateBlock
  margin-bottom: 17px;
  padding-left: 15px;
 &__date
  margin-left: 10px;
  font-size: 16px;
  color: #ECF0F1;
  letter-spacing: -0.04px;

 &__icon
  color: #ffffff;
  &--date
   width: 18px;
   min-width: 18px;
   height: 20px;
   min-height: 20px;

 &__btnBlock
  display: flex;
  justify-content: flex-end;
  width: 100%;
  min-height: 25px;
  &--tours
   justify-content: space-between;
   align-items: center;
   min-height: 46px;
   padding-left: 15px;
   padding-right: 19px;
   border-top: 1px solid #7D7D7D;

 &__btn
  padding: 0;
  margin: 0;
  min-width: 70px;
  height: 36px
  text-transform: uppercase;
  background: inherit;
  border: 0;
  cursor: pointer;
  font-family: Roboto;
  font-weight: 400;
  color: rgba(236,240,240,0.87);
  border-radius: 3px;
  font-size: 16px;
  letter-spacing: 0px;
  &--itinerary
   color: green-background;
   margin-right: 8px;
   margin-left: 16px;
  &--details
   position: relative;
   min-height: 25px;
   height: 25px;
   line-height: 25px;
   color: green-background;
   text-transform: capitalize;
   &:after
    content: '\2807';
    position: absolute;
    left: -13px;
    top: 53%;
    font-size: 24px;
    color: inherit;
    transform: translateY(-50%);
    cursor: pointer;

 &__row
  display: flex;

 &__rosterItem
  position: relative;
  width: 220px;
  height: 295px;
  margin-right: calc(25/1441*100%);
  background: tile-background;

 &__rosterPicture
  width: 220px;
  height: 295px;

 &__itemBottom
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;

  width: 220px;
  height: 70px;
  padding-left: 16px;
  background: rgba(0,0,0,0.2)

 &__bandName
  margin-bottom: 10px;
  font-weight: 500;
  font-size: 16px;
  line-height: 18px;
  color: #FFFFFF;
  letter-spacing: -0.04px;

 &__members
  font-weight: normal;
  font-size: 13px;
  line-height: 16px;
  color: #FFFFFF;
  letter-spacing: -0.03px;
