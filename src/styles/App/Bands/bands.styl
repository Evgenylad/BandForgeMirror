@import '../../../styles/colors'
.bands
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 100%;
 padding: 30px calc(34/1920*100%);
 &__container
  display: flex;
  flex-direction: column;

 &__title
  height: 35px;
  margin: 0;
  margin-bottom: 10px;
  margin-right: 50px;
  padding: 0;
  font-size: 24px;
  color: green-background;
  letter-spacing: 0px;
  line-height: 35px;
  &--item
   margin-bottom: 0;
   font-size: 16px;
   font-weight: bold;
   line-height: 26px;
   letter-spacing: -0.04px;
   color: #ffffff;
   cursor: pointer;

 &__btn
  padding: 0;
  margin: 0;
  text-transform: uppercase;
  cursor: pointer;
  font-family: Roboto;
  &--add
   min-width: 90px;
   height: 35px
   background: green-background;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;
   font-size: 14px;
   color: #ffffff;
   font-weight: 500;
   letter-spacing: -0.03px;

 &__link
  &--details
   margin-left: 29px;
   text-decoration: none !important;
   text-transform: uppercase;
   cursor: pointer;
   font-family: Roboto;
   font-weight: bold;
   color: green-background;
   line-height: 44px;
   cursor: pointer;

 &__row
  display: flex;
  &--first
   justify-content: flex-start;
   margin-bottom: 40px;
   height: 35px;

 &__item
  position: relative;
  width: 220px;
  min-height: 296px;
  margin-right: calc(25/1441*100%);
  background: tile-background;
  border-radius: 2px;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__picture
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 230px;

 &__itemBottom
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 100%;
  height: 66px;
  padding-left: 15px;
  padding-top: 9px;
  background: rgba(0,0,0,0.70);
  border-bottom: 2px solid rgba(0,0,0,0.12);

 &__members
  margin-bottom: 10px;
  font-weight: 400;
  font-size: 13px;
  line-height: 18px;
  color: #ffffff;
  letter-spacing: -0.11px;
