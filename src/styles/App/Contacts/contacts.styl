@import '../../../styles/colors'
.contacts
 position: relative;
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 100%;
 padding-left: 60px;
 padding-top: 20px;
 background: inherit;

 &__btn
  &--add
   margin: 8px 0;
   background: green-background;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;

   font-family: Roboto;
   font-weight: 500;
   font-size: 14px;
   color: #FFFFFF;
   letter-spacing: -0.03px;

 &__container
  display: flex;
  flex-direction: column;
  width: 70%;
  background: #1F2226;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__title
  position: relative;
  display: block;
  height: 40px;
  margin: 0;
  margin-right: 55px;
  font-family: Roboto;
  font-weight: normal;
  font-size: 36px;
  line-height: 40px;
  letter-spacing: -0.07px;
  color: green-background;

 &__row
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 20px;
  padding-left: 25px;
  min-height: 55px;
  font-family: Roboto;
  font-size: 12px;
  color: secondary-background;
  letter-spacing: 0px;
  &:nth-of-type(even)
    background: green-background;
    color: #1f2226;
  &:nth-of-type(odd)
    background: tile-background;
    color: #D7D7D7;
  &--first
   height: 40px;
   margin-bottom: 27px;
   padding-left: 0;
   background: inherit !important;
   justify-content: flex-start;
  &--total
   padding-left: 0;
  &--search
   height: 90px;
   padding-left: 30px;
   color: #d7d7d7;
  &--withData
   position: relative;

 &__total
  margin-left: 27px;
  font-size: 15px;
  color: #1F2226;
  letter-spacing: 0px;

 &__totalSelected
  margin-right: 1px;

 &__btnBlock
  display: flex;
  justify-content: space-between;
  width: 50px;
 &__icon
  &--dots
   margin-top: 1px;
   cursor: pointer;

 &__cell
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  &--checkbox
   justify-content: center;
   width: 20px;
   margin: 0;
  &--name
   width: 15%;
   text-decoration: none !important;
   cursor: pointer;
   text-align: center;
   color: inherit !important;
   text-transform: capitalize;
  &--email
   width: 20%;
   text-transform: capitalize;
  &--phone
   width: 10%;
   text-transform: capitalize;
  &--company
   width: 15%;
   text-transform: capitalize;
   text-align: center;
  &--social
   display: flex;
   width: 30%;
   text-transform: capitalize;

 &__link
  &--social
   margin-right: 12px;
   cursor: pointer;

.md-checkbox .md-checkbox-container
 width: 16px !important;
 height: 16px !important;
