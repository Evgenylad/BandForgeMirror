@import '../../../styles/colors'
.merch
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 100%;
 padding: 30px calc(34/1920*100%);
 &__container
  display: flex;
  flex-direction: column;

 &__title
  height: 35px;
  margin: 0;
  margin-bottom: 10px;
  margin-right: 50px;
  padding: 0;
  font-size: 24px;
  color: green-background;
  letter-spacing: 0px;
  font-weight: normal;
  line-height: 35px;

 &__btn
  padding: 0;
  margin: 0;
  text-transform: uppercase;
  cursor: pointer;
  font-family: Roboto;
  &--add
   min-width: 90px;
   height: 35px
   background-color: green-background;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;
   font-size: 14px;
   color: #ffffff;
   font-weight: 500;
   letter-spacing: -0.03px;

 &__row
  display: flex;
  &--first
   justify-content: flex-start;
   margin-bottom: 40px;
   height: 35px;

 &__item
  position: relative;
  width: 220px;
  height: 295px;
  margin-right: calc(25/1441*100%);
  background: tile-background;

 &__picture
  display: flex;
  align-items: center;
  justify-content: center;
  width: 220px;
  height: 295px;

 &__svg
  width: 100%;
  height: auto;

 &__itemBottom
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 220px;
  height: 70px;
  padding-left: 15px;
  padding-right: 15px;
  background: rgba(0,0,0,0.2)

 &__info
  display: flex;
  flex-direction: column;
  justify-content: center;

 &__name
  margin-bottom: 10px;
  font-weight: 500;
  font-size: 16px;
  line-height: 18px;
  color: #FFFFFF;
  letter-spacing: -0.04px;

 &__description
  font-weight: normal;
  font-size: 13px;
  line-height: 16px;
  color: #FFFFFF;
  letter-spacing: -0.03px;
