@import '../../../styles/colors'
.tours
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 90%;
 padding: 30px calc(34/1920*100%);
 overflow: scroll;
 &__container
  display: flex;
  flex-direction: column;

 &__title
  height: 35px;
  margin: 0;
  margin-bottom: 10px;
  margin-right: 50px;
  padding: 0;
  font-size: 24px;
  color: green-background;
  letter-spacing: 0px;
  font-weight: normal;
  line-height: 35px;
  &--item
   margin-bottom: 20px;
   color: rgba(0,0,0,0.87);
   letter-spacing: -0.05px;
   line-height: 26px;

 &__btn
  padding: 0;
  margin: 0;
  text-transform: uppercase;
  cursor: pointer;
  font-family: Roboto;
  &--add
   min-width: 116px;
   height: 35px
   background: #F35530;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;
   font-size: 14px;
   color: #ffffff;
   font-weight: 500;
   letter-spacing: -0.03px;

 &__link
  &--details
   margin-left: 29px;
   text-decoration: none !important;
   text-transform: uppercase;
   cursor: pointer;
   font-family: Roboto;
   font-weight: bold;
   color: green-background;
   line-height: 44px;
   cursor: pointer;

 &__row
  display: flex;
  flex-wrap: wrap;
  &--first
   justify-content: flex-start;
   margin-bottom: 40px;
   height: 35px;

 &__item
  position: relative;
  width: 360px;
  min-height: 420px;
  margin-right: calc(25/1441*100%);
  margin-bottom: 20px;
  background: green-background;
  border-radius: 2px;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__picture
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 195px;

 &__itemBottom
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 100%;
  height: 181px;
  padding-left: 18px;
  padding-right: 18px;
  padding-top: 20px;
  background: #ffffff;
  border-bottom: 2px solid rgba(0,0,0,0.12);

 &__contact
  display: flex;
  justify-content: flex-start;
  height: 40px;
  margin-bottom: 18px;


 &__info
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 80%;

 &__name
  margin-bottom: 10px;
  font-weight: 500;
  font-size: 16px;
  line-height: 18px;
  color: #383C42;
  letter-spacing: -0.11px;

 &__position
  font-weight: normal;
  font-size: 14px;
  line-height: 16px;
  color: #999999;
  letter-spacing: -0.11px;

 &__btnBlock
  display: flex;
  min-height: 44px;
  background: #ffffff;
  border-radius: 2px;

 &__icon
  color: green-background;
  margin: 0;
  margin-right: 36px;
  width: 20px;
  min-width: 20px;
  height: 20px;
  min-height: 20px;

 &__svg
  &--dots
   position: absolute;
   top: 20px;
   right: 20px;
   width: 16px;
   height: 28px;
   fill: #ffffff;
   cursor: pointer;
