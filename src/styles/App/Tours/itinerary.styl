@import '../../../styles/colors'
.itinerary
 display: flex;
 flex-direction: column;
 position: relative;
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 100%;
 padding-top: 20px;
 background: inherit;
 overflow: scroll;

 &__contacts
  width: 86.5%;
  min-height: 371px;
  margin: 0 auto;
  background: tile-background;
  box-shadow: 0px 17px 50px 0px rgba(0,0,0,0.19), 0px 12px 15px 0px rgba(0,0,0,0.24);
  border-radius: 4px;

 &__head
  position: relative;
  display: flex;
  height: 80px;
  margin-bottom: 20px;
  border-bottom: 1px solid #6e7175;

 &__content
  display: flex;

 &__column
  &--first
   width: calc(341/1442*100%);
   margin-left: calc(30/1442*100%);
   margin-right: calc(69/1442*100%);
  &--second
   width: calc(467/1442*100%);
   margin-right: calc(25/1442*100%);
  &--third
   width: calc(430/1442*100%);

 &__colName
  padding-bottom: 25px;
  font-size: 20px;
  font-weight: normal;
  color: green-background;
  letter-spacing: -0.13px;
  border-bottom: 1px solid #6e7175;

 &__list
  width: calc(294/341*100%);
  min-height: 45px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
  background: primary-text;
  &--userBlock
   background: #1F2226;
   box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.26), 0px 2px 10px 0px rgba(0,0,0,0.16);
   border-radius: 2px 0px 2px 2px 2px;

  &--userBlock
   position: absolute;
   top: 70px;
   right: 0;
   width: 257px;
   height: 120px;

 &__listItem
  position: relative;
  width: 100%;
  min-height: 45px;
  padding-left: calc(20/341*100%);
  line-height: 45px;
  color: #ffffff;
  cursor: pointer;
  &:hover
   background: green-background;
  &--userBlock
   height: 60px;
   line-height: 60px;
   &:first-of-type
    border-bottom: 1px solid #6e7175;

 &__container
  width: 83%;
  margin: 0 auto;
  margin-bottom: 20px;
  background: #1F2226;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__title
  position: relative;
  display: block;
  width: 90%;
  height: 90px;
  margin: 0;
  padding-left: calc(30/1442*100%);
  font-family: Roboto;
  font-size: 36px;
  line-height: 96px;
  font-weight: normal;
  color: green-background;
  text-align: left;
  &--contacts
   height: 80px;
   line-height: 80px;

 &__svg
  &--dots
   position: absolute;
   top: 50%;
   right: 20px;
   width: 16px;
   height: 28px;
   fill: #ffffff;
   cursor: pointer;
   transform: translateY(-50%);

 &__total
  margin-left: 25px;

 &__row
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  padding-right: 20px;
  padding-left: calc(16/1442*100%);

  font-family: Roboto-Regular;
  font-size: 12px;
  color: secondary-background;
  letter-spacing: 0px;
  &:nth-of-type(odd)
   background: green-background;
   color: #1f2226;
  &:nth-of-type(even)
   background: tile-background;
   color: #d7d7d7
  &--withData
   position: relative;
   &:after
    content: '\2807';
    position: absolute;
    right: 10px;
    top: 59%;
    font-size: 24px;
    transform: translateY(-50%);
    cursor: pointer;
  &--contacts
   justify-content: flex-start;
   align-items: flex-start;
   background: tile-background !important;

 &__blockTitle
  color: #999999;
  font-size: 14px;

 &__description
  color: #ffffff;
  font-size: 16px;

 &__totalSelected
  margin-right: 1px;

 &__btnBlock
  display: flex;
  width: 50px;

 &__btn
  &--add
   align-self: center;
   width: 30px;
   height: 30px;
   min-width: 0;
   min-height: 0;
   margin-bottom: 26px;
   padding: 0;
   border-radius: 50%;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);

 &__userMenu
  position: relative;
  &:after
   content: '\2807';
   position: absolute;
   right: -10px;
   top: 61%;
   font-size: 26px;
   color: rgba(0,0,0,0.54);
   transform: translateY(-50%);
   cursor: pointer;

 &__cell
  text-align: center;
  overflow: hidden;
  &--checkbox
   justify-content: center;
   width: 3%;
   margin: 0;
   margin-left: calc(10/1442*100%);
  &--name
   width: 18%;
   text-decoration: none !important;
   cursor: pointer;
   text-align: center;
   color: inherit !important;
  &--date
   width: 8%;
  &--contact
   width: 14%;
  &--email
   width: 18%;
  &--status
   width: 6%;
  &--venue
   width: 12%;
  &--ticketUrl
   width: 7%;
   color: inherit;
  &--catering
   width: 7%;
   text-align: center;
  &--housing
   width: 7%;
   text-align: center;

 &__link
  text-decoration: none !important;
  color: inherit;
  &--userBlock
   display: block;
   width: 100%;
   height: auto;
  &--popup
   position: absolute;
   top: 50%;
   right: 20px;

 &__icon
  margin: 0;
  margin-right: 30px;
  color: green-background;
  &--cross
   position: absolute;
   top: 50%;
   right: 17px;
   width: 18px;
   min-width: 18px;
   height: 18px;
   min-height: 18px;
   font-size: 20px;
   margin-right: 0;
   transform: translateY(-50%);
   fill: rgba(255,255,255,0.54);
  &--delete
   color: rgba(0,0,0,0.54);
   text-shadow: 1px 1px 0 #979797, -1px -1px 0 #979797, -1px 1px 0 #979797, 1px -1px 0 #979797;
  &--detail
   fill: green-background;

.md-checkbox .md-checkbox-container
 width: 16px !important;
 height: 16px !important;
