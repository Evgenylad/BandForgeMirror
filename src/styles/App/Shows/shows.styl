@import '../../../styles/colors'
.shows
 position: relative;
 width: calc(1664/1920*100%);
 max-width: 1664px;
 height: 90%;
 padding-left: 60px;
 padding-top: 20px;
 background: inherit;
 overflow-y: scroll;

 &__btn
  &--add
   margin: 8px 0;
   background: #CCCCCC;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;

   font-family: Roboto-Medium;
   font-size: 14px;
   color: #383C42;
   letter-spacing: -0.03px;

 &__container
  display: flex;
  flex-direction: column;
  width: 70%;
  background: #1F2226;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__title
  position: relative;
  display: block;
  height: 90px;
  margin: 0;
  padding-left: 26px;
  font-family: Roboto-Regular;
  font-size: 36px;
  line-height: 96px;
  color: #69CC97;
  &:after
   content: '\2807';
   position: absolute;
   right: 10px;
   top: 71%;
   font-size: 24px;
   color: #79CB96;
   transform: translateY(-50%);
   cursor: pointer;

 &__total
  margin-left: 25px;

 &__row
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 50px;
  padding-right: 20px;

  font-family: Roboto-Regular;
  font-size: 12px;
  color: secondary-background;
  letter-spacing: 0px;
  &:nth-of-type(odd)
   background: green-background;
   color: #1f2226;
  &:nth-of-type(even)
   background: tile-background;
   color: #d7d7d7;
  &--withData
   position: relative;
   &:after
    content: '\2807';
    position: absolute;
    right: 10px;
    top: 50%;
    font-size: 24px;
    transform: translateY(-50%);
    cursor: pointer;


 &__totalSelected
  margin-right: 1px;

 &__btnBlock
  display: flex;
  width: 50px;
 &__icon
  &--delete
   color: rgba(0,0,0,0.54);
   text-shadow: 1px 1px 0 #979797, -1px -1px 0 #979797, -1px 1px 0 #979797, 1px -1px 0 #979797;

 &__userMenu
  position: relative;
  &:after
   content: '\2807';
   position: absolute;
   right: -10px;
   top: 61%;
   font-size: 26px;
   color: rgba(0,0,0,0.54);
   transform: translateY(-50%);
   cursor: pointer;

 &__cell
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  &--checkbox
   justify-content: center;
   width: calc(68/1068*100%);
   margin: 0;
   margin-left: 10px;
   text-transform: capitalize;
  &--name
   width: calc(191/1068*100%);
   text-decoration: none !important;
   cursor: pointer;
   text-align: center;
   color: inherit !important;
   text-transform: capitalize;
  &--date
   width: calc(111/1068*100%);
   text-transform: capitalize;
  &--contact
   width: calc(214/1068*100%);
   text-transform: capitalize;
  &--status
   width: calc(80/1068*100%);
   text-transform: capitalize;
  &--venue
   width: calc(200/1068*100%);
   text-transform: capitalize;
  &--ticketUrl
   width: calc(112/1068*100%);
   text-transform: capitalize;
   text-decoration: none;
   color: inherit;

.md-checkbox .md-checkbox-container
 width: 16px !important;
 height: 16px !important;
