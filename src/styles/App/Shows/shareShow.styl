@import '../../../styles/colors'
.shareShow
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: overlay;
  z-index: 100;
  &__container
   position: absolute;
   top: 50%;
   left: 50%;
   display: flex;
   flex-direction: column;
   align-self: center;
   width: 437px;
   height: 289px;
   padding: 25px;

   color: green-background;
   z-index: 10;
   background: #383c42;
   transform: translate(-50%, -50%);
   box-shadow: 0px 17px 50px 0px rgba(0,0,0,0.19), 0px 12px 15px 0px rgba(0,0,0,0.24);
   border-radius: 4px;

  &__title
   margin: 0;
   font-size: 24px;
   letter-spacing: -0.05px;

  &__inputBlock
   padding: 25px;
   &::after
    height: 0;

  &__btnBlock
   display: flex;
   justify-content: flex-end;

  &__btn
   padding: 0;
   margin: 0;
   font-family: Roboto;
   font-size: 14px;
   letter-spacing: -0.03px;
   &--cancel
    color: #8F9499;

  &__label
   left: 25px;
   height: 32px;
   align-self: center;
   font-family: Roboto;
   font-weight: normal;
   font-size: 16px;
   color: green-background !important;
   cursor: pointer;

  &__input
   color: #fafafa !important;
   height: 30px;
   padding-left: 10px;
   font-size: 16px;
   letter-spacing: -0.01px;
   border-bottom: 1px solid green-background;

   &:focus
    border-bottom: 1px solid input-focus;
