@import '../../../styles/colors'
.shareShow
 position: absolute;
 top: 50%;
 left: 50%;
 display: flex;
 flex-direction: column;
 align-self: center;
 width: 437px;
 height: 289px;
 padding: 25px;
 color: green-background;
 z-index: 10;
 background: #393c42;
 transform: translate(-50%, -50%);
 box-shadow: 0 0 14px 2px rgba(0,0,0,0.33);
 border-radius: 4px;

 &__title
  margin: 0;

 &__inputBlock
  padding: 25px;
  &::after
   height: 0;

 &__btnBlock
  display: flex;
  justify-content: flex-end;

 &__btn
  padding: 0;
  margin: 0;
  font-family: Roboto-Medium;
  font-size: 14px;
  letter-spacing: -0.03px;
  &--cancel
   color: #8f9499 !important;

 &__label
  left: 25px;
  height: 32px;
  align-self: center;
  font-family: Roboto-Light;
  font-size: 16px;
  color: green-background !important;
  cursor: pointer;

 &__input
  color: #fafafa !important;
  height: 30px;
  padding-left: 10px;
  font-family: Roboto-Regular;
  letter-spacing: -0.01px;
  border-bottom: 1px solid green-background;
  &:focus
   border-bottom: 1px solid input-focus;
