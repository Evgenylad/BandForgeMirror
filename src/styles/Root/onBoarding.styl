@import '../../styles/colors'
.onBoarding
  margin: 0 auto;
  z-index: 1;
  &__container
   width: 540px;
   height: 425px;
   background: #393c42;
   border: 1px solid rgba(150,150,150,0.11);
   box-shadow: 1px 1px 3px 0px rgba(0,0,0,0.20);

  &__box
   display: flex;
   align-items: center;
   flex-direction: column;
   justify-content: flex-start;

  &__inputBlock
   width: 322px;
   height: 30px;
   margin: 0;
   margin-top: 30px;
   margin-bottom: 9px;
   padding: 0;
   font-family: Roboto-Regular;
   font-size: 16px;

  &__label
   font-family: Roboto-Regular;
   font-size: 16px;
   color: green-background !important;
   letter-spacing: -0.01px;

  &__input
   color: #fafafa !important;
   height: 30px;
   margin-top: 20px;
   padding-left: 10px;
   letter-spacing: -0.01px;
   border-bottom: 1px solid green-background;
   &:focus
    border-bottom: 1px solid input-focus;

  &__btn
   margin-top: 59px;
   background: #21ce99;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;
   font-family: Roboto-Medium;
   font-size: 14px;
   color: #fafafa;
   letter-spacing: -0.03px;
   text-transform: none;

.onBoarding__input:focus + .onBoarding__label
 color: #808080;


@media(min-width: 501px)
 .onBoarding
   &__container
    width: 540px
    text-align: center
    margin: 100px auto

@media(max-width: 500px)
 .onBoarding
   &__container
    width: 100%
    text-align: center
    margin: 20px auto
