@import '../styles/colors'
.signup
  margin: 0 auto;
  z-index: 1;
  &__container
   width: 438px;
   height: 451px;
   background: #393c42;
   border: 1px solid rgba(150,150,150,0.11);
   box-shadow: 1px 1px 3px 0px rgba(0,0,0,0.20);

  &__box
   display: flex;
   align-items: center;
   flex-direction: column;
   justify-content: flex-start;

  &__inputBlock
   width: 211px;
   height: 60px;
   margin: 0;
   margin-top: 38px;
   padding: 0;
   border-bottom: 1px solid #fafafa;
   font-family: Roboto-Light;
   font-size: 16px;

  &__label
   font-family: Roboto-Light;
   font-size: 16px;
   color: #fafafa !important;
   text-transform: uppercase;

  &__input
   color: #fafafa !important;
   height: 40px;
   margin-top: 20px;

  &__btn
   margin-top: 38px;
   background: #21ce99;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;
   font-family: Roboto-Medium;
   font-size: 14px;
   color: #fafafa;
   letter-spacing: -0.03px;

  &__welcomeText
   margin-top: 33px;
   font-family: Roboto-Light;
   font-size: 14px;
   color: #a6a6a6;
   letter-spacing: -0.03px;


@media(min-width: 501px)
 .signup
   &__container
    width: 438px
    text-align: center
    margin: 100px auto

@media(max-width: 500px)
 .signup
   &__container
    width: 100%
    text-align: center
    margin: 20px auto
