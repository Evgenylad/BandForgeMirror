
.shows
 position: relative;
 width: (1664/1920)*100%;
 max-width: 1664px;
 height: 100%;
 padding-left: 60px;
 padding-top: 20px;
 background: inherit;

 &__btn
  &--add
   margin: 8px 0;
   background: #CCCCCC;
   box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.16), 0px 2px 5px 0px rgba(0,0,0,0.26);
   border-radius: 3px;

   font-family: Roboto-Medium;
   font-size: 14px;
   color: #383C42;
   letter-spacing: -0.03px;

 &__container
  display: flex;
  flex-direction: column;
  width: 70%;
  background: #1F2226;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.20), 0px 1px 5px 0px rgba(0,0,0,0.13);

 &__title
  display: block;
  height: 90px;
  margin: 0;
  padding-left: 26px;
  font-family: Roboto-Regular;
  font-size: 36px;
  line-height: 96px;
  color: #69CC97;

 &__row
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 36px;
  padding-left: 26px;
  padding-right: 20px;

  font-family: Roboto-Regular;
  font-size: 15px;
  color: secondary-background;
  letter-spacing: 0px;
  &--even
   background: green-background;
  &--odd
   background: tile-background;

 &__totalSelected
  margin-right: 1px;

 &__btnBlock
  display: flex;
  width: 50px;
 &__icon
  &--delete
   color: #979797;

 &__userMenu
  position: relative;
  &:after
   content: '\2807';
   position: absolute;
   right: -10px;
   top: 50%;
   font-size: 26px;
   color: #ffffff;
   transform: translateY(-50%);
   cursor: pointer;
